
.intro
  width 100%
  height 100%
  background-color $color-primary

  &-header
    max-width $container-width
    margin 0 auto
    // border 1px solid red

    &-logo
      width 250px

      @media (max-width $breakpoint-tablet)
        width 180px

  &-desc
    max-width $container-width
    margin 5% auto
    height 55vh
    display flex
    flex-direction column
    align-items center
    justify-content space-around

    @media (max-width $breakpoint-tablet)
      height 70vh

    &-title
      font-family $font-family
      font-size 3rem
      font-weight 600
      color $color-white
      text-transform uppercase
      text-align center

    &-subtitle
      font-family $font-family
      text-align center
      color $color-white
      font-weight 300

    &-button
      font-family $font-family
      text-decoration none
      background-color $color-white
      padding 40px 80px
      font-size 2rem
      color $color-primary
      font-weight 600
      border-radius 100px
      text-transform uppercase
      transition all .1s ease-in-out

      @media (max-width $breakpoint-tablet)
        padding 20px 40px

      &:hover
        transform scale(1.1, 1.1)
